<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl">
        <include  layout="@layout/waveshape"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" تصويت"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:gravity="top|center"/>

        <TextView
            android:id="@+id/voteTitle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:elevation="15dp"
            android:translationZ="20dp"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:textDirection="rtl"
            android:background="@drawable/loginedittextitems"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="لوريم إيبسوم  ودور النشر."
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/voteContent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp"
            android:elevation="15dp"
            android:translationZ="20dp"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:textDirection="rtl"
            android:background="@drawable/loginedittextitems"
            android:textAlignment="center"
            tools:text="لوريم إيبسوم(Lorem Ipsum) هو ببساطة نص شكلي ويُستخدم في صناعات المطابع ودور النشر."
            android:textSize="40sp"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layoutDirection="ltr"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content">
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"

                android:text="موافق"
                android:textSize="40sp"
                android:textStyle="bold"

                app:buttonTint="@color/light_green"
                android:layout_marginBottom="25dp"
                android:background="@drawable/loginedittextitems"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/against"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"
                android:text="غير موافق"
                android:textSize="40sp"
                android:textStyle="bold"
                app:buttonTint="@color/light_green"
                android:layout_marginBottom="25dp"
                android:background="@drawable/loginedittextitems"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/neutral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"
                android:text="محايد"
                android:textSize="40sp"
                android:textStyle="bold"
                app:buttonTint="@color/light_green"

                android:background="@drawable/loginedittextitems"
                />
        </RadioGroup>
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginHorizontal="120dp"
            android:backgroundTint="@color/blue"
            android:text="تصويت"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</FrameLayout>